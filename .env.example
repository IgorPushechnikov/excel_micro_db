# .env.example
# Пример файла переменных окружения.
# Скопируйте этот файл в `.env` и настройте значения под себя.

# ===== Режим работы приложения =====
APP_MODE=development              # development, production, debug
DEBUG=true
AUTO_RELOAD=true

# ===== Пути к директориям =====
DATA_DIR=./data
OUTPUT_DIR=./output
LOGS_DIR=./logs
TEMPLATES_DIR=./templates
CONFIG_DIR=./config

# ===== Настройки базы данных =====
DATABASE_URL=sqlite:///excel_micro_db.sqlite
DATABASE_ECHO=false               # Логировать SQL запросы (true/false)

# ===== Настройки анализа Excel =====
MAX_FILE_SIZE_MB=100
ANALYSIS_TIMEOUT_SECONDS=300
DEFAULT_SHEET_ROW_LIMIT=1000      # Максимальное количество строк для анализа по умолчанию

# ===== Настройки логирования =====
LOG_LEVEL=DEBUG                   # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
LOG_FILE_ROTATION_SIZE=50MB
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# ===== Настройки GUI =====
GUI_THEME=default
GUI_LANGUAGE=ru
GUI_WINDOW_WIDTH=1200
GUI_WINDOW_HEIGHT=800

# ===== Настройки процессора данных =====
PROCESSOR_BATCH_SIZE=1000         # Размер батча для обработки данных

# ===== Настройки экспорта =====
EXPORTER_DEFAULT_FORMAT=xlsx      # Формат экспорта по умолчанию